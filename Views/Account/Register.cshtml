@model sklepMVCv2.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@Styles.Render("~/Content/Register.css")

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="register">
        @Html.AntiForgeryToken()
        <h2>Registration</h2>
        <h4>Create a new account.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
    <table>

        <tr>

            <th>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control margin" })
                    </div>
                </div>
            </th>
            <th>

                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control margin" })
                    </div>
                </div>

            </th>


        </tr>

        <tr>

            <th>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control margin" })
                    </div>
                </div>
            </th>
            <th>

                <div class="form-group">
                    @Html.LabelFor(m => m.Surname, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Surname, new { @class = "form-control margin" })
                    </div>
                </div>

            </th>

        </tr>

        <tr>

            <th>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control margin" })
                    </div>
                </div>
            </th>
            <th>

                <div class="form-group">
                    @Html.LabelFor(m => m.City, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.City, new { @class = "form-control margin" })
                    </div>
                </div>

            </th>
        </tr>

        <tr>
            <th>

            </th>
            <th>
                <div class="form-group">
                    @Html.LabelFor(m => m.Street, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Street, new { @class = "form-control margin" })
                    </div>
                </div>

            </th>


        </tr>
        <tr>
            <th>
                <div class="form-group">

                </div>
            </th>
            <th>
                <div class="form-group">
                    @Html.LabelFor(m => m.HouseNumber, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.HouseNumber, new { @class = "form-control margin" })
                    </div>
                </div>
            </th>

        </tr>
        <tr>
            <th>
                <div class="form-group">

                </div>
            </th>
            <th>
                <div class="form-group">
                    @Html.LabelFor(m => m.ZipCode, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control margin" })
                    </div>
                </div>
            </th>

        </tr>

    </table>

        <hr />
        <input type="submit" class="btn btn-default" value="Register" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
