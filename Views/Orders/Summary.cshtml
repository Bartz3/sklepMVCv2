
@{
    ViewBag.Title = "Summary";
}

<h2>Podsumowanie</h2>
@Styles.Render("~/Content/cartView.css")
<h3>
    Zamówienia użytkownika: @ViewBag.User

</h3>
<table>
    <tr>
        <th>Nazwa</th>
        <th>Zdjęcie</th>
        <th>Cena</th>
    </tr>
    @if (Model != null)
    {
        decimal sum = 0;
        foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>
                    @if (product.Image != null)
                    {
                        var base64 = Convert.ToBase64String(product.Image);
                        var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                        <img src='@imgsrc' height="50" />
                    }

                </td>
                <td>@product.Price zł</td>
            </tr>
            sum += product.Price;
        }
        <h4>Suma zakupów: @sum zł</h4>

    }
</table>

@using (Html.BeginForm("confirmSummary", "Orders"))
    {
    @Html.AntiForgeryToken()
    <div>
        Metoda płatności:   @Html.DropDownList("paymentMethod", null, htmlAttributes: new { @class = "form-control" })
        <br />
        <button class="btn btn-info ">Potwierdź zamówienie </button>
    </div> 

    }

<br />
<div class="form-group">
    <div class="col-md-10">
    </div>
</div>
